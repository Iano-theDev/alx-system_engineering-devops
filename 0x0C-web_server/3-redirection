#!/usr/bin/env bash
# Configures Nginx server so that /redirect_me is redirecting to another page

sudo apt-get -y update
sudo apt-get -y upgrade
sudo apt-get -y install nginx
sudo service nginx start
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak
404_error="\\\terror_page 404 /404.html;\n\tlocation = /404.html{\n\troot /usr/share/nginx/html;\n\tinternal;\n\t}"
sudo sed -i "26i $redirect" /etc/nginx/sites-available/default
sudo service nginx restart
sudo service nginx reload
